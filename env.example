# ============================================================
#  Polymarket Arbitrage Engine — Environment Variables
#  Copy this file to .env and fill in your values.
#  NEVER commit .env to version control.
# ============================================================

# ── Betting mode ─────────────────────────────────────────────
# true  = dry run (logs bets, no real orders submitted) ← SAFE DEFAULT
# false = live trading (real USDC at risk)
DRY_RUN=true

# ── Wallet credentials ───────────────────────────────────────
# Your Polygon wallet private key (the key that signs orders).
# For email/Magic wallets: export from Polymarket → Deposit → Export Private Key
# For MetaMask: Account Details → Export Private Key
POLY_PRIVATE_KEY=0xYOUR_PRIVATE_KEY_HERE

# The "funder" address — the Polygon address that HOLDS your USDC.
# For email/Magic wallets: Polymarket → Deposit → Deposit Address (the 0x... shown)
# For EOA/MetaMask wallets trading directly: same as your wallet address
POLY_FUNDER=0xYOUR_FUNDER_ADDRESS_HERE

# Signature type (must match your wallet type):
#   0 = EOA / MetaMask trading directly from wallet (no proxy)
#   1 = Email / Magic wallet (Polymarket's default web login)
#   2 = Browser wallet proxy (MetaMask connected via Polymarket UI)
POLY_SIG_TYPE=1

# ── Notes ────────────────────────────────────────────────────
# Before live trading you must also set USDC token allowances so the
# Polymarket Exchange contract can spend your funds. Do this once:
#
#   from py_clob_client.client import ClobClient
#   client = ClobClient(host, key=POLY_PRIVATE_KEY, chain_id=137,
#                       signature_type=POLY_SIG_TYPE, funder=POLY_FUNDER)
#   client.set_api_creds(client.create_or_derive_api_creds())
#   client.update_funder()           # sets allowances automatically
#
# See: https://docs.polymarket.com/developers/CLOB/orders/token-allowances
